<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="col-6 offset-3 mb-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="psw">Password</label>
                <input class="form-control" type="password" id="psw" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Login</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>